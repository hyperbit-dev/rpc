{
  "version": "0.2.0",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@hyperbitjs/rpc",
  "author": "Hyperbit",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyperbit-dev/rpc",
    "directory": "packages/rpc"
  },
  "module": "dist/rpc.esm.js",
  "size-limit": [
    {
      "path": "dist/rpc.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/rpc.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.20.11",
    "@size-limit/preset-small-lib": "^8.1.2",
    "husky": "^8.0.3",
    "size-limit": "^8.1.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.2.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
